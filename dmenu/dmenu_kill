#!/bin/bash
#
# Kill chosen regular user processes using the power of dmenu

process=$(ps -u $USER -o pid,%mem,%cpu,comm \
	| sort -b -k2 -r \
	| sed -ne '1!p' \
	| dmenu -l 15 -p "Choose process to KILL ğŸ”ª:")

pid=$(echo "${process}" | awk '{print $1}')
name=$(echo "${process}" | awk '{print $4}')

[[ -n "${pid}" ]] \
	&& kill -9 "${pid}" >/dev/null 2>&1 \
	&& notify-send "Killing Mission ğŸ”ª" "You kill ${name}, you monster ğŸ‘¾"

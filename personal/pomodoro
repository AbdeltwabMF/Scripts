#!/usr/bin/bash
#
# Callable script every 0, 25, 50 minutes

export DBUS_SESSION_BUS_ADDRESS
DBUS_SESSION_BUS_ADDRESS=$(cat /tmp/dbus-current-session)

message_body() {
  if [[ "$(date "+%M")" -eq "50" ]]; then
    echo "You've done a great job"
    echo "Time to take a break üòå"
  else
    echo "A new session has begun"
    echo "You have 25 minutes to achieve something valuable ü§ì"
  fi
}

notify-send "‚è∞ Pomodoro Cronie" "$(message_body)"
